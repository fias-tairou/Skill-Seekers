    <head>
      <style>
        body {
          background-image: url('/assets/images/champions-league.jpg');
          background-size: cover;
          background-repeat: no-repeat;
        }

        * {
          box-sizing: border-box;
        }

        .column {
          float: left;
          width: 25%;
          padding: 5px;
        }

        /* Clearfix (clear floats) */
        .row::after {
          content: "";
          clear: both;
          display: table;
        }
      </style>
      <section class="figure-section">
        <figure class="figure-fifa">
          <figcaption><%=league.name %></figcaption>
          <img src=<%=favoriteLeagueImage %> height="180px" alt="foto niet beschikbaar" />
        </figure>
      </section>

    
      <section class="figure-section">
        <% for( club of clubs) { %>
          <figure class="figure-fifa">
            <figcaption><%=club.name %></figcaption>
            <img src=<%=club.image_url %> alt=<%= club.name%> height="170px" />
          </figure>
          <% } %>
      </section>

