<%- include("./partials/header") %>
   <main class="main-fav-section">
      <style>
         body {
            background-image: url('/assets/club-pagina.jpg');
            background-size: cover;
            background-repeat: no-repeat;
         }
      </style>
      <h1 class="display-3-projecten--title">Favoriete Club</h1>
      <section class="figure-section">


         <% for( club of clubs) { %>
            <figure class="figure-fifa">
               <figcaption>
                  <%= club.name %> <a href="<%= `/favorieten/clubs/verwijder/${club.id}` %>">
                        <img class="verwijderKnop" src="/assets/VerwijderKnop.webp" alt="verwijderKnop">
                     </a>
               </figcaption>
               <!-- /favorieten/clubs/" +club.id  -->
               <img src=<%=club.image_url %> height="170px" alt="foto niet beschikbaar" />
            </figure>
            <% } %>




               <%- include("./partials/footer") %>