<body class="align-items-center">
    <header class="landing-page-header">
        <a href="/"><img src="/assets/logo-landing.jpeg" height="30px" class="header--logo--landing"></a>
        <section class="search--login--section">
            <button class="user--btn"><a href="/login" class="account--btn"><img src="assets/user.png" alt="" width="40px"></a></button>
        </section>
    </header>

    <h1 class="register--title">Registreren</h1>

    <main class="main-signup">
        <form action="/register" method="post" class="login--form">
            <label for="signupEmail">E-mail </label>
